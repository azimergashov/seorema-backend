                                <p  class="parol">parol: <%= e.password%></p>
                                <br>
                                <div class="text-end">
                                    <a class=" btn btn-danger" href="/supperadmin/deleteWorker/<%= e.id%>">O'chirish</a>
                                </div>
                            </div>
                        <!-- </a> -->
